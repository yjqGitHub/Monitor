<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <link rel="Bookmark" href="/favicon.ico">
    <link rel="Shortcut Icon" href="/favicon.ico" />
    <!--[if lt IE 9]>
    <script type="text/javascript" src="/Content/lib/html5shiv.js"></script>
    <script type="text/javascript" src="/Content/lib/respond.min.js"></script>
    <![endif]-->
    @Styles.Render("~/ListLayout/css")
    <style type="text/css">
        html, body {
            height: 100%;
            /*overflow:hidden;*/
        }

        .search {
            background-color: #F3F3F3;
            line-height: 34px;
            padding: 5px 5px 5px 5px;
        }
    </style>
    <!--[if IE 6]>
    <script type="text/javascript" src="/Content/lib/DD_belatedPNG_0.0.8a-min.js" ></script>
    <script>DD_belatedPNG.fix('*');</script>
    <![endif]-->
    @RenderSection("Style", false)
    <title>@ViewBag.Title</title>
</head>
<body>
    @RenderBody()
    @Scripts.Render("~/ListLayout/js")
    <!--请在下方写此页面业务相关的脚本-->
    <script type="text/javascript">
        $(document).ready(function () {
            ResetPageList();
            InitDailog(".Dialog");
        })
        $('.page-container-footer .dataTables_paginate a:not(:disabled)').on('click', function () {
            ShowLoading();
        });
        $('#SearchForm').submit(function () {
            ShowLoading();
        })
        //分页切换
        $("#PageSize").change(function () {
            $("#SearchForm").submit();
        })
        $(window).resize(function () {
            ResetPageList();
        });
        function ResetPageList() {
            $('.page-container-list').height($('body').height() - $('.breadcrumb').outerHeight(true) - $('.search').outerHeight(true) - $('.page-container-footer').outerHeight(true));
            if ($("#table-head-fixer")) {
                $("#table-head-fixer").tableHeadFixer();
            }
        }

    </script>
    @RenderSection("Script", false)
</body>
</html>